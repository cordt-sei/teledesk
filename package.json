{
  "name": "teledesk",
  "version": "1.0.4",
  "description": "Telegram bot to handle multiple support streams through custom Slack/Zendesk integrations",
  "main": "bot.js",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "start": "bash startup.sh",
    "dev": "cross-env LOG_LEVEL=DEBUG concurrently \"cross-env BOT_PROCESS=true nodemon bot.js\" \"cross-env WEBHOOK_PROCESS=true nodemon modules/slackWebhook.js\"",
    "prod": "cross-env LOG_LEVEL=INFO concurrently \"cross-env BOT_PROCESS=true node bot.js\" \"cross-env WEBHOOK_PROCESS=true node modules/slackWebhook.js\"",
    "lint": "eslint .",
    "format": "prettier --write .",
    "validate": "node tests/validate-config.js",
    "test:slack": "cross-env LOG_LEVEL=DEBUG node tests/diag-slack.js",
    "test:webhook": "cross-env LOG_LEVEL=DEBUG node tests/test-webhook.js",
    "test:reactions": "cross-env LOG_LEVEL=DEBUG node tests/test-reactions.js",
    "diag:slack": "cross-env LOG_LEVEL=DEBUG node tests/diag-slack.js",
    "diag:webhook": "cross-env LOG_LEVEL=DEBUG node tests/diag-webhook.js",
    "clear-webhook": "node clear-webhook.js",
    "logs": "tail -f logs/$(date +%Y-%m-%d).log"
  },
  "dependencies": {
    "axios": "^1.8.2",
    "body-parser": "^1.20.3",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "telegraf": "^4.12.2"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "eslint": "^8.57.0",
    "net": "^1.0.2",
    "nodemon": "^3.0.2",
    "pm2": "^5.3.0",
    "prettier": "^3.1.0"
  }
}